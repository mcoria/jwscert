<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-ejb-jar PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 EJB 3.1//EN" "http://glassfish.org/dtds/glassfish-ejb-jar_3_1-1.dtd">
<glassfish-ejb-jar>
	<security-role-mapping>
        <role-name>admins</role-name>
        <group-name>adm</group-name>
    </security-role-mapping>
	<security-role-mapping>
        <role-name>users</role-name>
        <group-name>usr</group-name>
    </security-role-mapping>   
	<security-role-mapping>
        <role-name>SERVICE_ACCOUNT</role-name>
        <principal-name>theserviceaccount</principal-name>
    </security-role-mapping>     
	<enterprise-beans>
		<ejb>
			<ejb-name>EjbSecurity</ejb-name>
			<webservice-endpoint>
				<port-component-name>EjbSecurity</port-component-name>
				<endpoint-address-uri>/EjbSecurity</endpoint-address-uri>
				<login-config>
					<auth-method>BASIC</auth-method>
					<realm>file</realm>
				</login-config>
				<transport-guarantee>CONFIDENTIAL</transport-guarantee>
				<debugging-enabled>true</debugging-enabled>
			</webservice-endpoint>
		</ejb>
		<ejb>
			<ejb-name>RunAsEjbSecurity</ejb-name>
			<webservice-endpoint>
				<port-component-name>RunAsEjbSecurity</port-component-name>
				<endpoint-address-uri>/RunAsEjbSecurity</endpoint-address-uri>
				<login-config>
					<auth-method>BASIC</auth-method>
					<realm>file</realm>
				</login-config>
				<transport-guarantee>CONFIDENTIAL</transport-guarantee>
				<debugging-enabled>true</debugging-enabled>
			</webservice-endpoint>
		</ejb>		
	</enterprise-beans>
</glassfish-ejb-jar>